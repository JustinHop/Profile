if [ -f list ]; then

    for RCFILE in bashrc \
        gvimrc	/
        gitconfig	/
        inputrc	/
        perltidyrc	/
        rpmmacros	/
        screenrc	/
        vimperatorrc	/
        vimrc	/
        vim	/
        rpmmacros	/
        zsh	/
        zshenv	/
        zlogin	/
        zlogout	/
        zshrc ; do
        if [ -e "$HOME/.$RCFILE" ]; then
            mv -v "$HOME/.$RCFILE" "$HOME/.$RCFILE.old"
        fi
        ln -sfv $RCFILE "$HOME/.$RCFILE"
    done

    if [ -d ssh ]; then
        chmod 700 ssh
        for SSHFILE in ssh/*(-.) ; do
            if [ -f "$HOME/.ssh/$SSHFILE" ]; then
                mv -v "$HOME/.ssh/$SSHFILE" "$HOME/.ssh/$SSHFILE.old"
            fi
        done
    fi
else
    echo "no list :-("
fi


# vim: ft=zsh:syn=zsh
