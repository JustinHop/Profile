for RCFILE in bashrc \
    gvimrc \
    gitconfig \
    include \
    inputrc \
    perltidyrc \
    screenrc \
    vimperatorrc \
    vimrc \
    vim \
    rpmmacros \
    zshenv \
    zlogin \
    zlogout \
    zshrc ; do
    if [[ -f "~/.$RCFILE" ]]; then
        mv -v "~/.$RCFILE" "~/.$RCFILE.old"
    fi
    ln -sfv "/home/justin/Profile/$RCFILE" ~/.$RCFILE

done

