cd ~/Profile
git submodule init
git submodule update
git submodule foreach --recursive git pull origin master

for RCFILE in bashrc \
    gvimrc \
    gitconfig \
    inputrc \
    perltidyrc \
    screenrc \
    vimperatorrc \
    vimrc \
    vim \
    rpmmacros \
    tmux.conf \
    zshenv \
    zlogin \
    zlogout \
    zshrc ; do
    if [[ -f "~/.$RCFILE" ]]; then
        mv -v "~/.$RCFILE" "~/.$RCFILE.old"
    fi
    if [[ -d "~/.$RCFILE" ]]; then
        mv -v "~/.$RCFILE" "~/.$RCFILE.old"
    fi
    ln -sfv ~/Profile/$RCFILE ~/.$RCFILE

done

if [[ ! -d ~/.config ]]; then
    mkdir ~/.config
fi

for CONFIG in ~/Profile/config/* ; do
    if [[ ! -e ~/Profile/config/$CONFIG ]]; then
        ln -sfv $CONFIG ~/.config
    fi
done

mkdir ~/bin ~/backup ~/tmp ~/.screenlogs

for EXE in ~/Profile/bin/* ; do
    if [ -e ~/bin/${EXE:t} ]; then
        mv -v ~/bin/${EXE:t} ~/bin/.${EXE:t}
    fi
    ln -sfv $EXE ~/bin
done

# vim: ft=zsh:syn=zsh
