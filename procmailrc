#:0:
#? test -d /home/justin/Maildir/.INBOX.${RECIEVER}

#| tee -a /home/justin/procmail.log &&  /usr/libexec/dovecot/deliver -n INBOX.${RECIEVER}
#${DEFAULT}


:0
* ? test -d ${MAILDIR}/.INBOX.${RECIEVER}
| /usr/libexec/dovecot/deliver -m INBOX.${RECIEVER}

:0E:
| /usr/libexec/dovecot/deliver -m INBOX
