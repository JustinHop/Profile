#!/bin/bash
#
#   handles scrollwheel up
#

DESKTOPS=
CURRENT=
NEXT=
STRING="x=0 y=0 w=1280 h=1024 d=32 ''"

if xwit -print -current | grep "$STRING" ; then
	DESKTOPS=`wmctrl -d | wc -l | xargs -i echo {} - 1 | bc `
	CURRENT=`wmctrl -d | grep '*' | awk '{ print $1 }'`
	if [ $CURRENT -eq $DESKTOPS ]; then
		NEXT=0
	else
		NEXT=`echo $CURRENT + 1 | bc`
	fi
	wmctrl -s $NEXT
else
	xdotool click 4
fi
