#!/bin/zsh

for i in $* ; do 
    echo "Playing $i"
    mplayer -vo xv -fs $MPLAYER_OPTS $i > /dev/null
    echo "Do you wish to keep $i [Y/n] "
    read -q ans
    if [[ $ans == "n" ]]; then
        echo "Not Keeping $i"
        baz="no"
    else
        echo "Keeping $i"
        baz=""
    fi
        mv -v "$i" ${baz}keep
done
