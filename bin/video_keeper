#!/bin/zsh

MPLAYER_OPTS=" -really-quiet -fixed-vo -osd-duration 5  -af volume=-5,volnorm -osdlevel 1 -fs "
mkdir keep nokeep

for i in "$@" ; do 
    echo "Playing ${(q)i}"
    ls -l "$i"
    eval mplayer $MPLAYER_OPTS ${(q)i}
    echo "Do you wish to remove $i [y/N] "
    read -q answer
    if [ "$anwser" = "n" ]; then
        echo "Keeping $i"
        #mv -v ${(q)i} keep
        mv -v "$i" keep
    else
        echo "Not Keeping $i"
        #mv -v ${(q)i} nokeep
        mv -v "$i" nokeep
    fi
done
