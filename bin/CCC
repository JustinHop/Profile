#!/bin/bash

if [ -d /tmp/brave ]; then
    rm -rf /tmp/brave
fi

cp -rv ~/.config/clean-brave-config /tmp/brave

exec brave-browser \
    --incognito \
    --user-data-dir=/tmp/brave \
    --proxy-server=socks://localhost:9050 \
    "$@"
    # --proxy-server=http://localhost:8118 \

rm -rfv /tmp/brave
