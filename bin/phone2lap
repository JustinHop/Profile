#!/bin/zsh

#
#   This is to move pics from the phone to the laptop
#

SRC=/media/disk/dcim/100nikon/
DST=/home/justin/Pictures
TXLIST="${SRC}/transfered_list"

NEWDATE=`date +%F`

if [ ! -d "${DST}/${NEWDATE}" ]; then
	mkdir -p "${DST}/${NEWDATE}"
fi

cd $SRC

tar -cpf - -X $TXLIST *.jpg | ( cd "$DST/$NEWDATE" ; tar -xvpf - )

cd "$DST/$NEWDATE"

for PIC in *jpg ; do
	echo ${PIC:t} >> $TXLIST
done

