#!/bin/zsh

#
#   This is to move pics from the phone to the laptop
#

SRC=/media/disk/DCIM/
DST=/home/justin/Pictures
TXLIST=/media/disk/transfered_list

NEWDATE=`date +%F`

if [ ! -d "${DST}/${NEWDATE}" ]; then
	mkdir -p "${DST}/${NEWDATE}"
fi

if [ ! -w $TXLIST ]; then
    echo "$TXLIST not writable"
    exit 1
fi

for PICTURE find ${SRC} -iname '*jpg'  
